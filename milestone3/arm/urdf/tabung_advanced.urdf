<?xml version="1.0"?>

<robot name="tabung_advanced">
    <material name="pink">
        <color rgba="0.902 0.11 0.7921 1" />
    </material>

    <material name="hijau">
        <color rgba="0.067 0.922 0.208 1" />
    </material>

    <material name="kuning">
        <color rgba="1 1 0 1" />
    </material>

    <material name="biru">
        <color rgba="0.047 0.722 0.961 1" />
    </material>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.45" rpy="0 0 0"/>

            <geometry>
                <cylinder length="0.9" radius="0.04" />
            </geometry>

            <material name="biru"/>
        </visual>
    </link>

    <link name="tabung1">
        <visual>
            <origin xyz="0 0 0.35" rpy="0 0 0"/>

            <geometry>
                <cylinder length="0.7" radius="0.04" />
            </geometry>

            <material name="kuning"/>
        </visual>
    </link>

    <link name="tabung2">
        <visual>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>

            <geometry>
                <cylinder length="0.5" radius="0.04" />
            </geometry>

            <material name="hijau"/>
        </visual>
    </link>

    <link name="tabung3">
        <visual>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            
            <geometry>
                <cylinder length="0.3" radius="0.04" />
            </geometry>

            <material name="pink"/>
        </visual>
    </link>

    <link name="end_effector"/>

    <joint name="base_to_tabung1" type="revolute">
        <parent link="base_link" />
        <child link="tabung1" />
        <origin xyz="0 0 0.9" />
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-1.57079632679" upper="1.57079632679" velocity="0.5"/>
    </joint>

    <joint name="tabung1_to_tabung2" type="revolute">
        <parent link="tabung1" />
        <child link="tabung2" />
        <origin xyz="0 0 0.7" />
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.57079632679" upper="1.57079632679" velocity="0.5"/>
    </joint>

    <joint name="tabung2_to_tabung3" type="revolute">
        <parent link="tabung2" />
        <child link="tabung3" />
        <origin xyz="0 0 0.5" />
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.57079632679" upper="1.57079632679" velocity="0.5"/>
    </joint>

    <joint name="tabung3_to_end" type="fixed">
        <parent link="tabung3" />
        <child link="end_effector" />
        <origin xyz="0 0 0.3" />
    </joint>

    <!-- <joint name="tabung2_to_end" type="fixed">
        <parent link="tabung2" />
        <child link="end_effector" />
        <origin xyz="0 0 0.5"/>
    </joint> -->

</robot>